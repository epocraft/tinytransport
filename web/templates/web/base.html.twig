{% set lang = languageService.urlAlias %}
{% set locale = languageService.locale %}
{% set BASE = twig_base %}

<!doctype html>
<html lang="{{ lang }}">

    <head>

        <meta charset="utf-8">

        <title>{% block title %}{% if article is defined or project is defined %}{{ article.title }} | {{ project.ciName }}{% endif %}{% endblock %}</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="apple-mobile-web-app-capable" content="yes">

		<meta name="description" lang="{{ lang }}" content="{% block meta_description %}{% if article is defined or project is defined %}{{ article.metaDescription }}{% endif %}{% endblock %}">
		<meta name="keywords" lang="{{ lang }}" content="{% block meta_keywords %}{% if article is defined or project is defined %}{{ article.metaKeywords }}{% endif %}{% endblock %}">

		<meta name="author" content="°Sauneo, vypotíme to za Vás!">
		<meta name="robots" content="index,follow">

		<base href="{{ BASE }}">

		<link rel="apple-touch-icon" sizes="180x180" href="assets/web/media/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="assets/web/media/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="assets/web/media/favicon/favicon-16x16.png">
		<link rel="manifest" href="assets/web/media/favicon/site.webmanifest">
		<link rel="mask-icon" href="assets/web/media/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="shortcut icon" href="assets/web/media/favicon/favicon.ico">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="msapplication-config" content="assets/web/media/favicon/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

		<meta property="og:url" content="{{ BASE }}">
		<meta property="og:type" content="article">
		<meta property="og:title" content="{% block og_title %}{% if article is defined or project is defined %}{{ article.title }} | {{ projectService.ciName }}{% endif %}{% endblock %}">
		<meta property="og:description" content="{% block og_meta_description %}{% if article is defined or project is defined %}{{ article.metaDescription }}{% endif %}{% endblock %}">
		<meta property="og:image" content="assets/web/media/logos/svg/logo-horizontal.svg">
		<meta property="og:image:width" content="222">
		<meta property="og:image:height" content="79">
		<meta property="og:site_name" content="{{ projectService.ciName }}">
		<meta property="og:locale" content="{{ locale }}">

		{% block head_css %}

			<!-- Bootstrap -->
			<link href="{{ asset('assets/web/src/node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" media="screen">

			<!-- Fontawesome -->
			<link href="{{ asset('assets/web/src/node_modules/@fortawesome/fontawesome-free/css/all.min.css') }}" type="text/css" rel="stylesheet" media="screen">

			<!-- lightbox2 -->
			<link href="{{ asset('assets/web/src/node_modules/lightbox2/dist/css/lightbox.min.css') }}" type="text/css" rel="stylesheet" media="screen">

			<!-- Custom style -->
			<link href="{{ asset('assets/web/css/_style.css') }}?v={{ 'now'|date('U') }}" type="text/css" rel="stylesheet" media="screen">

		{% endblock %}

        {% block head_stylesheet %}
		<style>
			body {margin-top: 50px !important;}
		</style>
			
		{% endblock %}

		{% block head_javascript %}{% endblock %}

    </head>

    <body>

