		<!-- Below is the link that users can use to open Preferences Center to change their preferences. Do not modify the ID parameter. Place it where appropriate, style it as needed. -->

        {% if app.environment == 'prod' %}
			
		{% else %}
			<div class="mq"></div>
		{% endif %}

		<div id="preloader-wrapper">
			<div class="preloader">
				<p class="logo"><img src="{{ asset('assets/web/media/logos/svg/logo-horizontal.svg') }}"></p>
				<p class="indicator"><img src="{{ asset('assets/web/media/icons/svg/preloader.svg') }}"></p>
			</div>
		</div>

        <div class="page-wrapper">

            {% block body %}

				<!-- begin::Flash messages -->
                {% for type, messages in app.flashes %}
                	{% for message in messages %}
        	            <div class="alert {{ alert_type(type) }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <!-- end::Flash messages -->

				{% include "web/navigation/navigation.html.twig" %}

	            {% block body_content %}

					

				{% endblock %}

		    {% endblock %}

        </div>

		<!-- begin::impressum -->
		{% include "web/footer/footer.html.twig" %}
    	<!-- end::impressum -->

		<!-- begin::impressum -->
		{% include "web/footer/impressum.html.twig" %}
    	<!-- end::impressum -->

		<!--begin::Back to top page -->
    	<a id="top-button"></a>
    	<!-- end::Back to top page -->

		<!--begin::cookies preferences center -->
    	<a id="open_preferences_center" title="Centrum předvoleb souborů Cookies"></a>
    	<!-- end::cookies preferences center -->

		<!-- Bootstrap -->
		<script type="text/javascript" src="{{ asset('assets/web/src/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>

		<!-- jQuery -->
		<script type="text/javascript" src="{{ asset('assets/web/src/node_modules/jquery/dist/jquery.min.js') }}"></script>

		<!-- lightbox2 -->
		<script type="text/javascript" src="{{ asset('assets/web/src/node_modules/lightbox2/dist/js/lightbox.min.js') }}"></script>

		<!-- jQuery cookie -->
		<script type="text/javascript" src="{{ asset('assets/web/src/node_modules/jquery.cookie/jquery.cookie.js') }}"></script>

		{% block body_javascript %}{% endblock %}

		<!--begin::Javascript function -->
		{% block wrapper_body_javascript_function %}

			<script type="text/javascript">

				{% block body_javascript_function %}

					$(window).on("load", function() {
						$('#preloader-wrapper').fadeOut(1000, function() {
							$(".page-wrapper").fadeIn(1000).removeClass('d-none').addClass('d-block');
						});
					});

					var tbtn = $('#top-button');
					var opc = $('#open_preferences_center');

					$(window).scroll(function() {
						if ($(window).scrollTop() > 300) {
							tbtn.addClass('show');
							opc.addClass('show');
						} else {
							tbtn.removeClass('show');
							opc.removeClass('show');
						}
					});

					tbtn.on('click', function(e) {
						e.preventDefault();
						$('html, body').animate({scrollTop:0}, '300');
					});

				{% endblock %}

			</script>

		{% endblock %}
		<!--end::Javascript function -->

		<!-- begin::Document ready -->
		{% block wrapper_body_javascript_document_ready %}

        	<script type="text/javascript">

				$(document).ready(function() {

					{% block body_javascript_document_ready %}



                    {% endblock %}

				});

			</script>

		{% endblock %}
		<!-- end::Document ready -->

    </body>

</html>