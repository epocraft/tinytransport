{% import _self as formMacros %}

{% macro addRow(priceQuotationItem, index) %}

    <div class="row mb-2">

        <div class="col-3">
            {{ form_widget(priceQuotationItem.name) }}
            <ul class="suggestions" id="suggestions-{{ priceQuotationItem.vars.name }}"></ul>
            {{ form_help(priceQuotationItem.name) }}
            {{ form_errors(priceQuotationItem.name) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.ammount) }}
            {{ form_help(priceQuotationItem.ammount) }}
            {{ form_errors(priceQuotationItem.ammount) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.sellingPrice) }}
            {{ form_help(priceQuotationItem.sellingPrice) }}
            {{ form_errors(priceQuotationItem.sellingPrice) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.sellingCurrencyUnit) }}
            {{ form_help(priceQuotationItem.sellingCurrencyUnit) }}
            {{ form_errors(priceQuotationItem.sellingCurrencyUnit) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.sellingMeasureUnit) }}
            {{ form_help(priceQuotationItem.sellingMeasureUnit) }}
            {{ form_errors(priceQuotationItem.sellingMeasureUnit) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.sellingVatOfRate) }}
            {{ form_help(priceQuotationItem.sellingVatOfRate) }}
            {{ form_errors(priceQuotationItem.sellingVatOfRate) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.priceWithoutVat) }}
            {{ form_help(priceQuotationItem.priceWithoutVat) }}
            {{ form_errors(priceQuotationItem.priceWithoutVat) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.vat) }}
            {{ form_help(priceQuotationItem.vat) }}
            {{ form_errors(priceQuotationItem.vat) }}
        </div>

        <div class="col-1">
            {{ form_widget(priceQuotationItem.priceWithVat) }}
            {{ form_help(priceQuotationItem.priceWithVat) }}
            {{ form_errors(priceQuotationItem.priceWithVat) }}
        </div>

        <div class="col-1 d-flex justify-content-center align-items-start">
            <!-- Vždy zobrazit tlačítko pro přidání řádku -->
            <button type="button" class="btn btn-success add_item_link me-2"><i class="mdi mdi-plus-circle-outline"></i></button>
            
            <!-- Tlačítko pro odstranění řádku se zobrazí pro všechny řádky kromě prvního -->
            <button type="button" class="btn btn-danger delete-item"><i class="mdi mdi-trash-can-outline"></i></button>
        </div>

    </div>

{% endmacro %}

<div class="form-errors">
	{{ form_errors(form) }}
</div>

<div class="card">

    <div class="card-header align-items-center d-flex bg-primary">
		<h4 class="card-title mb-0 flex-grow-1 text-white">{{ 'fieldset.basic_data'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-6">
                {{ form_label(form.number, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group mb-3">
                    <span class="input-group-text" id="number-prefix">{{ priceQuotationSettings.documentPrefix is defined and priceQuotationSettings.documentPrefix is not empty ? priceQuotationSettings.documentPrefix : 'CN' }}</span>
                    {{ form_widget(form.number, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': form.number.vars.attr.placeholder,
                            'aria-label': form.number.vars.attr.placeholder,
                            'aria-describedby': 'number-prefix'
                        }
                    }) }}
                </div>
                {{ form_errors(form.number) }}
			</div>

            <div class="col-6">
				{{ form_row(form.enquiry) }}
			</div>

            <div class="col-12">
				{{ form_row(form.name) }}
			</div>

            <div class="col-12">
                {{ form_row(form.description) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex bg-primary">
		<h4 class="card-title mb-0 flex-grow-1 text-white">{{ 'fieldset.contractor'|trans({}, 'price_quotation') }} / {{ 'fieldset.customer'|trans({}, 'price_quotation') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-6">
                {{ form_row(form.contractor) }}
            </div>

            <div class="col-6">
                {{ form_row(form.customer) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex bg-primary">
		<h4 class="card-title mb-0 flex-grow-1 text-white">{{ 'fieldset.date'|trans({}, 'price_quotation') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-4">
                {{ form_row(form.issueDate) }}
            </div>

            <div class="col-4">
                {{ form_row(form.validityDate) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex bg-primary">
		<h4 class="card-title mb-0 flex-grow-1 text-white">{{ 'fieldset.quotation_items'|trans({}, 'price_quotation') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-3">název</div>
            <div class="col-1 text-center">{{ 'label.ammount'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_price'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_currency_unit'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_measure_unit'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_vat_of_rate'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_price_without_vat'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_vat'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1 text-center">{{ 'label.selling_price_with_vat'|trans({}, 'price_quotation')|lower }}</div>
            <div class="col-1"></div>

        </div>

        <hr>

        <!-- generování formu --> 
        <ul data-index="{{ form.priceQuotationPriceQuotationItems|length > 0 ? form.priceQuotationPriceQuotationItems|last.vars.name + 1 : 0 }}" data-prototype="{{ formMacros.addRow(form.priceQuotationPriceQuotationItems.vars.prototype)|e('html_attr') }}" class="price-quotation-items" style="list-style-type: none; padding-left: 0;">

            {% for priceQuotationItem in form.priceQuotationPriceQuotationItems %}

                {{ formMacros.addRow(priceQuotationItem, loop.index0) }}

            {% endfor %}

        </ul>

        <hr>

        <div class="row">

            <div class="col-8 d-flex align-self-center"><strong>CELKEM</strong></div>
            <div class="col-1">
                {{ form_widget(form.totalPriceWithoutVat) }}
                {{ form_help(form.totalPriceWithoutVat) }}
                {{ form_errors(form.totalPriceWithoutVat) }}
            </div>
            <div class="col-1">
                {{ form_widget(form.totalVat) }}
                {{ form_help(form.totalVat) }}
                {{ form_errors(form.totalVat) }}
            </div>
            <div class="col-1">
                {{ form_widget(form.totalPriceWithVat) }}
                {{ form_help(form.totalPriceWithVat) }}
                {{ form_errors(form.totalPriceWithVat) }}
            </div>
            <div class="col-1"></div>

        </div>

        <hr>

        <button type="button" class="btn btn-success global-add-item-link"><i class="mdi mdi-plus-circle-outline"></i> Přidat řádek</button>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex bg-primary">
		<h4 class="card-title mb-0 flex-grow-1 text-white">{{ 'fieldset.status'|trans({}, 'invoice_status') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
                {{ form_row(form.status) }}
            </div>

            <div class="col-12">
                {{ form_row(form.publication) }}
            </div>

        </div>

    </div>

</div>
