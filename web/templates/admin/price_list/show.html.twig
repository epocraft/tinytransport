{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}

    <h1 class="fs-2 d-flex justify-content-between">
		<span>{{ priceList.name }}</span>
		<span>{{ priceList.supplier.ciName }}</span>
	</h1>

    {% if priceAlert %}
        <div class="alert alert-danger" role="alert">
            Tato položka má chybně nastavenou prodejní cenu!
        </div>
    {% endif %}

    {% if parameterAlert %}
        <div class="alert alert-warning" role="alert">
            Tato položka nemá nastavené prodejní parametry!
        </div>
    {% endif %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'price_list')|lower }}</th>
                            <td colspan="3">{{ priceList.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.name'|trans({}, 'price_list')|lower }}</th>
                            <td colspan="3">{{ priceList.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.description'|trans({}, 'price_list')|lower }}</th>
                            <td colspan="3">{{ priceList.description|raw }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.supplier'|trans({}, 'supplier')|lower }}</th>
                            <td colspan="3">{{ priceList.supplier.ciname }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">{{ 'label.purchase_price'|trans({}, 'price_list')|lower }}</th>
                            <td class="w-25">{{ priceList.purchasePrice }} {{ priceList.purchaseCurrencyUnit.name }} / {{ priceList.purchaseMeasureUnit.name }}</td>
                            <th class="w-25">{{ 'label.selling_price'|trans({}, 'price_list')|lower }}</th>
                            <td class="w-25">
                                {% if priceList.sellingPrice is null %}
                                    <span class="text-danger">-</span>
                                {% else %}
                                    {{ priceList.sellingPrice }} {{ priceList.sellingCurrencyUnit.name }} / {{ priceList.sellingMeasureUnit.name }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'label.purchase_vat_of_rate'|trans({}, 'price_list')|lower }}</th>
                            <td>{{ priceList.purchaseVatOfrate.name }}</td>
                            <th>{{ 'label.selling_vat_of_rate'|trans({}, 'price_list')|lower }}</th>
                            <td>
                                {% if priceList.sellingVatOfRate is null %}
                                    <span class="text-danger">-</span>
                                {% else %}
                                    {{ priceList.sellingVatOfrate.name }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'label.surcharge'|trans({}, 'price_list')|lower }}</th>
                            <td colspan="3">{{ priceList.surcharge }}&nbsp;%</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.publication'|trans|lower }}</th>
                            <td colspan="3">
                                {% set publication = priceList.publication %}
                                {% if publication == '' %}
                                {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    {% if (image is defined) and (image is not null) %}
        <div class="card">

            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.image_data'|trans([], 'image') }}</h4>
            </div>

            <div class="card-body">

                <div class="table-responsive">

                    <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                        <tbody>
                            <tr>
                                <th class="w-25">{{ 'label.name'|trans({}, 'image')|lower }}</th>
                                <td class="w-25">{{ image.name }}</td>
                                <td rowspan="9" class="w-50 text-center">
                                {% if fileExists(project_directory ~ image.filePath ~ image.fileName ~ '.' ~ image.fileType) %}
                                        <figure class="figure img-thumbnail text-center">
                                            <img src="{{ asset(image.filePath ~ image.fileName ~ '.' ~ image.fileType) }}" class="img-fluid" style="max-height: 250px;">
                                            <figcaption class="figure-caption">{{ image.fileName }}.{{ image.fileType }} ({{ image.width }} x {{ image.height }} px, {{ image.fileSize // 1024|round(1, 'floor') }} kB)</figcaption>
                                        </figure>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'label.description'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.description|raw }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.version'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.version }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.file_name'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.fileName }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.file_type'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.fileType }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.file_path'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.filePath }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.file_size'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.fileSize }} b</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.width'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.width }} px</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.height'|trans({}, 'image')|lower }}</th>
                                <td>{{ image.height }} px</td>
                            </tr>
                        </tbody>

                    </table>

                </div>

            </div>

        </div>
    {% endif %}

    <div class="row">

        {% if priceLogs %}

            <div class="col-12">

                <div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.price_of_modifications'|trans }}</h4>
                    </div>

                    <div class="card-body">
                        <div id="chart" class="apex-charts" dir="ltr"></div>
                    </div>

                </div>
            
            </div>

        {% else %}

            <div class="col-12">

                <div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.price_of_modifications'|trans }}</h4>
                    </div>

                    <div class="card-body">
                        <p class="mb-0">Žádná data k dispozici</p>
                    </div>

                </div>
            
            </div>

        {% endif %}

		{% if dateLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfModifications" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfModifications"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfModifications">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ priceList.createdAt|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ dateLog.user.userUserContact.firstname }}
												{{ dateLog.user.userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_price_list_edit', {'id': priceList.id}) }}" title="{{ 'action.edit_price_list'|trans({}, 'price_list') }}" class="btn btn-success">{{ 'action.edit_price_list'|trans({}, 'price_list') }}</a>
            <a href="{{ path('app_admin_price_list_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/price_list/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}

{% block body_javascript %}

    {{ parent() }}

    <!-- apexcharts -->
    <script src="assets/admin/libs/apexcharts/apexcharts.min.js"></script>

{% endblock %}

{% block body_javascript_function %}

    {{ parent() }}

    var options = {
        series: [{
            name: 'Nákup',
            data: [{% for priceLog in priceLogs %}{{ priceLog.purchasePrice }}, {% endfor %}]
        }, {
            name: 'Prodej',
            data: [{% for priceLog in priceLogs %}{{ priceLog.sellingPrice }}, {% endfor %}]
        }],
        chart: {
            type: 'bar',
            height: 350
        },
        plotOptions: {
            bar: {
                horizontal: false,
                columnWidth: '55%',
                endingShape: 'rounded'
            },
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            show: true,
            width: 2,
            colors: ['transparent']
        },
        xaxis: {
            categories: [
                {% for priceLog in priceLogs %}
            
                    {% set date = priceLog.updatedAt|date('Y-m-d H:i:s') %}

                    {% if date == '1000-01-01 00:00:00' %}

                        '{{ priceList.createdAt|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d') }}',

                    {% else %}

                        '{{ priceLog.updatedAt|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d') }}',

                    {% endif %}

            {% endfor %}

            ],
        },
        yaxis: {
            title: {
                text: 'Kč'
            }
        },
        fill: {
            opacity: 1
        },
        tooltip: {
            y: {
                formatter: function (val) {
                    return val + " Kč"
                }
            }
        }
    };

    var chart = new ApexCharts(document.querySelector("#chart"), options);
    chart.render();

{% endblock %}
