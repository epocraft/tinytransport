<div class="form-errors">
	{{ form_errors(form) }}
</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.basic_data'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
				{{ form_row(form.name) }}
			</div>

            <div class="col-12">
				{{ form_row(form.description) }}
			</div>

            <div class="col-12">
				{{ form_row(form.supplier) }}
			</div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.price_data'|trans({}, 'price_list') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-3">
				{{ form_row(form.purchasePrice) }}
			</div>

            <div class="col-3">
				{{ form_row(form.purchaseCurrencyUnit) }}
			</div>

            <div class="col-3">
				{{ form_row(form.purchaseMeasureUnit) }}
			</div>

            <div class="col-3">
				{{ form_row(form.purchaseVatOfRate) }}
			</div>

            <div class="col-3">
				{{ form_row(form.sellingPrice) }}
			</div>

            <div class="col-3">
				{{ form_row(form.sellingCurrencyUnit) }}
			</div>

            <div class="col-3">
				{{ form_row(form.sellingMeasureUnit) }}
			</div>

            <div class="col-3">
				{{ form_row(form.sellingVatOfRate) }}
			</div>

            <div class="col-3">
                {{ form_label(form.surcharge, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group mb-3">
                    {{ form_widget(form.surcharge, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': form.surcharge.vars.attr.placeholder,
                            'aria-label': form.surcharge.vars.attr.placeholder,
                            'aria-describedby': 'surcharge-unit'
                        }
                    }) }}
                    <span class="input-group-text" id="surcharge-unit">%</span>
                </div>
                {{ form_errors(form.surcharge) }}
			</div>

            <div class="col-3 number-of-pieces-in-package-wrapper">
				{{ form_row(form.numberOfPiecesInPackage) }}
			</div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.image_data'|trans([], 'image') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">

                {% if (image is defined) and (image is not null) %}
        
                    <div class="table-responsive image-detail">

                        <table class="table table-striped table-hover table-nowrap align-middle">

                            <tbody>
                                <tr>
                                    <th class="w-25">{{ 'label.name'|trans({}, 'image')|lower }}</th>
                                    <td class="w-25">{{ image.name }}</td>
                                    <td rowspan="9" class="w-50">
                                        {% if fileExists(project_directory ~ image.filePath ~ image.fileName ~ '.' ~ image.fileType) %}
                                            <figure class="figure img-thumbnail text-center">
                                                <img src="{{ asset(image.filePath ~ image.fileName ~ '.' ~ image.fileType) }}" class="img-fluid" style="max-height: 250px;">
                                                <figcaption class="figure-caption">{{ image.fileName }}.{{ image.fileType }} ({{ image.width }} x {{ image.height }} px, {{ image.fileSize // 1024|round(1, 'floor') }} kB)</figcaption>
                                            </figure>
                                            <button type="button" class="btn btn-danger btn-delete-image d-block" data-id="{{ image.id }}">Smazat</button>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.description'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.description|raw }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.version'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.version }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_name'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileName }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_type'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileType }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_path'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.filePath }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_size'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileSize }} b</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.width'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.width }} px</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.height'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.height }} px</td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                {% endif %}

                {{ form_row(form.photo) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.publication'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
                {{ form_row(form.publication) }}
            </div>

        </div>

    </div>

</div>
