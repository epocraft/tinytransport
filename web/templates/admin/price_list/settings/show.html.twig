{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'price_list')|lower }}</th>
                            <td>{{ priceListSettings.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.surcharge'|trans({}, 'price_list')|lower }}</th>
                            <td>{{ priceListSettings.surcharge }}&nbsp;%</td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_price_list_settings_edit', {'id': priceListSettings.id}) }}" title="{{ 'action.edit_price_list_settings'|trans({}, 'price_list') }}" class="btn btn-success">{{ 'action.edit_price_list_settings'|trans({}, 'price_list') }}</a>
            <a href="{{ path('app_admin_price_list_settings_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/price_list/settings/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
