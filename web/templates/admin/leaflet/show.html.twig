{% extends 'admin/base.html.twig' %}

{% block body_content %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.market'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.market.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.name'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.source_pdf'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.sourcePdf }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.source_img'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.sourceImg }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.source_upload'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.sourceUpload }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pinned'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.pinned }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.views'|trans({}, 'leaflet')|lower }}</th>
                            <td>{{ leaflet.views }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.valid_from'|trans|lower }}</th>
	    					<td>{{ leaflet.validFrom|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.valid_to'|trans|lower }}</th>
	    					<td>{{ leaflet.validTo|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.publication'|trans|lower }}</th>
                            <td>
                                {% set publication = leaflet.publication %}
                                {% if publication == '' %}
                                {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'label.publication_from'|trans|lower }}</th>
	    					<td>{{ leaflet.publicationFrom|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.publication_to'|trans|lower }}</th>
	    					<td>{{ leaflet.publicationTo|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateFormat ? app.request.attributes.get('user').userUserSettings.dateFormat : 'Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-6">

				<div class="card">

					<div class="card-header align-items-center d-flex">
						<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
					</div>

					<div class="card-body">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ leaflet.createdAt|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ app.request.attributes.get('user').userUserContact.firstname }}
												{{ app.request.attributes.get('user').userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_leaflet_edit', {'id': leaflet.id}) }}" title="{{ 'action.edit_leaflet'|trans({}, 'leaflet') }}" class="btn btn-success">{{ 'action.edit_leaflet'|trans({}, 'leaflet') }}</a>
            <a href="{{ path('app_admin_leaflet_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/leaflet/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
