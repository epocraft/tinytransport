{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}

    <h1 class="fs-2">{{ source.name }}</h1>
    
    <div class="row mb-4">

        <div class="col-lg-12">

            {{ form_start(form) }}

                {{ include('admin/source_item/_form.html.twig') }}

                <div class="float-start">
                    <button class="btn btn-success">{{ 'action.save'|trans }}</button>
                    <a href="{{ path('app_admin_source_item_index', {'sourceId': sourceId}) }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans }}</a>
                </div>

            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}
