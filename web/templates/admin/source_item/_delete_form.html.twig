<form method="post" action="{{ path('app_admin_source_item_delete', {'id': sourceItem.id, 'sourceId': sourceId}) }}" onsubmit="return confirm('{{ 'alert.are_you_sure_you_want_to_delete_this_item'|trans }}');" class="d-inline-block float-end">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sourceItem.id) }}">
    <button class="btn btn-danger">{{ 'action.delete'|trans }}</button>
</form>
