<div class="form-errors">
	{{ form_errors(form) }}
</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.basic_data'|trans([], 'mail') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
                {{ form_row(form.addressFrom) }}
            </div>

            <div class="col-12">
                {{ form_row(form.addressTo) }}
            </div>

            <div class="col-6">
                {{ form_row(form.addressCc) }}
            </div>

            <div class="col-6">
                {{ form_row(form.addressBcc) }}
            </div>

        </div>

    </div>

</div>

