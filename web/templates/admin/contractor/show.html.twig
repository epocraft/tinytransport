{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="card">

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                     <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.id }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>


    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.company_information'|trans({}, 'contractor') }}</h4>

        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.ci_name'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_in'|trans({}, 'contractor')|upper }}</th>
                            <td>{{ contractor.ciIn }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_tin'|trans({}, 'contractor')|upper }}</th>
                            <td>{{ contractor.ciTin }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_vat_payer'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciVatPayer ? 'text.yes'|trans|lower : 'text.no'|trans|lower }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.contact_information'|trans({}, 'contractor') }}</h4>
            
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.ci_phone'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciPhone }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_mobile'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciMobile }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_fax'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciFax }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_email'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciEmail }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_web'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciWeb }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_duns'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciDuns }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_data_box'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciDataBox }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.bank_information'|trans({}, 'contractor') }}</h4>
            
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.ci_ba'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciBa }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_bc'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciBc }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_iban'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciIban }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.ci_swift'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.ciSwift }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.billing_information'|trans({}, 'contractor') }}</h4>
            
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.bi_name'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.biName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.bi_street'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.biStreet }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.bi_city'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.biCity }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.bi_zipcode'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.biZipcode }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.bi_country'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.biCountry }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.delivery_information'|trans({}, 'contractor') }}</h4>
            
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.di_name'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.diName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.di_street'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.diStreet }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.di_city'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.diCity }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.di_zipcode'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.diZipcode }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.di_country'|trans({}, 'contractor')|lower }}</th>
                            <td>{{ contractor.diCountry }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="card">

        <div class="card-header align-items-center d-flex">

            <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.publication'|trans }}</h4>
            
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover table-nowrap align-middle mb-0">
                    <tbody>
                        <tr>
                            <th>{{ 'label.publication'|trans|lower }}</th>
                            <td>
                                {% set publication = contractor.publication %}
                                {% if publication == '' %}
                                    {{ 'publication.select'|trans({}, 'contractor')|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                    <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                    <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfModifications" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfModifications"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfModifications">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ contractor.createdAt|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ dateLog.user.userUserContact.firstname }}
												{{ dateLog.user.userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_contractor_edit', {'id': contractor.id}) }}" title="{{ 'action.edit_contractor'|trans({}, 'contractor') }}" class="btn btn-success">{{ 'action.edit_contractor'|trans({}, 'contractor') }}</a>
            <a href="{{ path('app_admin_contractor_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/contractor/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
