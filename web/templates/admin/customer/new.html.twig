{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}

    <div class="row mb-4">

        <div class="col-lg-12">

            {{ form_start(form) }}

                {{ include('admin/customer/_form.html.twig') }}

                <div class="float-start">
                    <button class="btn btn-success">{{ 'action.save'|trans }}</button>
                    <a href="{{ path('app_admin_customer_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans }}</a>
                </div>

            {{ form_end(form) }}

        </div>

    </div>

{% endblock %}

{% block body_javascript_document_ready %}

    {{ parent() }}

    var module = "customer";
    var moduleUrl = "{{ path('app_admin_customer_new_ares') }}";
    {{ include('admin/inc/body-javascript-document-ready/ares.html.twig') }}

{% endblock %}
