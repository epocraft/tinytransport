{% block body_javascript_function %}

    {{ parent() }}

    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('test').addEventListener('click', function() {
            
            const isirTable = document.getElementById('isir-table');
            
            isirTable.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-nowrap align-middle">
                        <thead>
                            <tr>
                                <th colspan="2" class="bg-primary text-white text-start">Insolvenční rejstřík</th>
                            </tr>
                        </thead>
                        <tbody id="isir-table-body">
                            <tr>
                                <td colspan="2" class="text-center">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Načítám...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            `;

            // Spustíme AJAX (fetch)
            fetch('{{ path('api_insolvency_isir') }}?ic={{ customer.ciIn }}', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                let rowsHtml = '';

                if (data.stav && data.stav.kodChyby) {
                    rowsHtml += `
                        <tr>
                            <td colspan="2" class="text-start">${data.stav.textChyby} (${data.stav.popisChyby})</td>
                        </tr>
                    `;
                }

                if (data.data) {
                    rowsHtml += `
                        <tr>
                            <th class="text-start">Spisová značka</th>
                            <td>${data.data.bcVec}/${data.data.rocnik}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Soud</th>
                            <td>${data.data.nazevOrganizace}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Dlužník</th>
                            <td>${data.data.jmeno} ${data.data.nazevOsoby}</td>
                        </tr>
                        <tr>
                            <th class="text-start">IČO</th>
                            <td>${data.data.ic || 'Neznámé'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Rodné číslo</th>
                            <td>${data.data.rc || 'Neznámé'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Datum narození</th>
                            <td>${data.data.datumNarozeni ? data.data.datumNarozeni.substring(0, 10) : 'Neznámé'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Typ řízení</th>
                            <td>${data.data.druhVec}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Stav</th>
                            <td>${data.data.druhStavKonkursu}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Adresa</th>
                            <td>${data.data.ulice} ${data.data.cisloPopisne}, ${data.data.mesto} ${data.data.psc}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Datum zahájení úpadku</th>
                            <td>${data.data.datumPmZahajeniUpadku ? data.data.datumPmZahajeniUpadku.substring(0, 10) : 'Neznámé'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Detail</th>
                            <td><a href="${data.data.urlDetailRizeni}" target="_blank" class="btn btn-sm btn-primary">Detail</a></td>
                        </tr>
                        <tr>
                            <th class="text-start">Čas poslední synchronizace</th>
                            <td>${data.stav.casSynchronizace}</td>
                        </tr>
                    `;
                }

                const isirTableBody = document.getElementById('isir-table-body');
                isirTableBody.innerHTML = rowsHtml;
            })
            .catch(error => {
                //console.error('Error:', error);
                const isirTableBody = document.getElementById('isir-table-body');
                isirTableBody.innerHTML = `
                    <tr>
                        <td colspan="2" class="text-danger">Došlo k chybě při načítání dat.</td>
                    </tr>
                `;
            });

            {% if customer.ciTin %}
            const vatTable = document.getElementById('vat-table');
            
            vatTable.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-nowrap align-middle">
                        <thead>
                            <tr>
                                <th colspan="2" class="bg-primary text-white text-start">Registr plátců DPH</th>
                            </tr>
                        </thead>
                        <tbody id="vat-table-body">
                            <tr>
                                <td colspan="2" class="text-center">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Načítám...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            `;

            // Spustíme AJAX (fetch)
            fetch('{{ path('api_insolvency_vat') }}?dic={{ customer.ciTin }}', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                let rowsHtml = '';
    
                // 1) Nejprve vypíšeme status, pokud je k dispozici
                if (data.status) {
                    rowsHtml += `
                        <tr>
                            <th class="text-start">Datum odpovědi</th>
                            <td>${data.status.odpovedGenerovana || 'Neznámé'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Stav</th>
                            <td>${data.status.statusText || 'Neznámé'} (kód: ${data.status.statusCode || '-'})</td>
                        </tr>
                    `;
                }
                
                // 2) Dále klíč "statusPlatceDPH" s hlavními údaji
                if (data.statusPlatceDPH) {
                    rowsHtml += `
                        <tr>
                            <th class="text-start">DIČ</th>
                            <td>${data.statusPlatceDPH.dic || '-'}</td>
                        </tr>
                        <tr class="${data.statusPlatceDPH.nespolehlivyPlatce === 'ANO' ? 'text-white bg-danger' : ''}">
                            <th class="text-start">Nespolehlivý plátce</th>
                            <td>
                                ${data.statusPlatceDPH.nespolehlivyPlatce || '-'}
                            </td>
                        </tr>
                        <tr>
                            <th class="text-start">Číslo FÚ</th>
                            <td>${data.statusPlatceDPH.cisloFu || '-'}</td>
                        </tr>
                    `;

                    // 3) Zveřejněné účty mohou být standardní i nestandardní
                    //    a mohou se vyskytovat ve více kusech (pole).
                    if (
                        data.statusPlatceDPH.zverejneneUcty && 
                        data.statusPlatceDPH.zverejneneUcty.ucet &&
                        Array.isArray(data.statusPlatceDPH.zverejneneUcty.ucet)
                    ) {
                        const ucty = data.statusPlatceDPH.zverejneneUcty.ucet;
                        let uctyHtml = '';

                        ucty.forEach((item) => {
                            // Pro standardní účet (obsahuje "cislo" a "kodBanky")
                            if (item.standardniUcet) {
                                const cislo = item.standardniUcet.cislo || '-';
                                const kodBanky = item.standardniUcet.kodBanky || '-';
                                const datum = item.datumZverejneni || '-';
                                uctyHtml += `
                                    ${cislo}/${kodBanky}
                                    (zveřejněno: ${datum})
                                    <br>
                                `;
                            } 
                            // Pro nestandardní účet (obsahuje pouze "cislo")
                            else if (item.nestandardniUcet) {
                                const cislo = item.nestandardniUcet.cislo || '-';
                                const datum = item.datumZverejneni || '-';
                                uctyHtml += `
                                    ${cislo}
                                    (zveřejněno: ${datum})
                                    <br>
                                `;
                            }
                        });

                        rowsHtml += `
                            <tr>
                                <th class="text-start">Zveřejněné účty</th>
                                <td>${uctyHtml}</td>
                            </tr>
                        `;
                    }
                }
                const vatTableBody = document.getElementById('vat-table-body');
                vatTableBody.innerHTML = rowsHtml;
            })
            .catch(error => {
                //console.error('Error:', error);
                const vatTableBody = document.getElementById('vat-table-body');
                vatTableBody.innerHTML = `
                    <tr>
                        <td colspan="2" class="text-danger">Došlo k chybě při načítání dat.</td>
                    </tr>
                `;
            });
            {% endif %}

            const ceuTable = document.getElementById('ceu-table');

            // Zobrazíme kostru tabulky se spinnerem
            ceuTable.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-nowrap align-middle">
                        <thead>
                            <tr>
                                <th colspan="2" class="bg-primary text-white text-start">Centrální evidence úpadců (CEU)</th>
                            </tr>
                        </thead>
                        <tbody id="ceu-table-body">
                            <tr>
                                <td colspan="2" class="text-center">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Načítám...</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            `;

            // Fetch na /admin/api/insolvency/ceu?ic={customer.ciIn}
            fetch('{{ path('api_insolvency_ceu') }}?ic={{ customer.ciIn }}', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                // Pokud backend vrátí 404, fetch NEvyhodí výjimku; 
                // musíme si to ošetřit ručně kontrolou response.ok
                if (!response.ok) {
                    // Vhodné vyhodit chybu, abychom to zachytili v catch
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                const ceuTableBody = document.getElementById('ceu-table-body');

                // Pokud server vrátí něco jako { "error": "Nebyla nalezena ..." }
                if (data.error) {
                    ceuTableBody.innerHTML = `
                        <tr>
                            <td colspan="2" class="text-start">${data.error}</td>
                        </tr>
                    `;
                    return;
                }

                // Předpokládáme, že CEU vrátí pole objektů (pokud existuje víc záznamů)
                // - např. [ { "Spisová značka": "...", "Soud": "...", ... }, { ... } ]
                if (!Array.isArray(data) || data.length === 0) {
                    // buď je to prázdný array, nebo server vrátil nečekaný formát
                    ceuTableBody.innerHTML = `
                        <tr>
                            <td colspan="2" class="text-start">Nebyla nalezena žádná data (prázdný výsledek).</td>
                        </tr>
                    `;
                    return;
                }

                // Jinak máme alespoň jeden záznam.
                let rowsHtml = '';
                data.forEach((record, index) => {
                    // record by měl mít např. klíče "Spisová značka", "Soud", "Dlužník", "IČO", ...
                    rowsHtml += `
                        <tr>
                            <th class="text-start" style="width: 200px;">Záznam #${index+1}</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="text-start">Spisová značka</th>
                            <td>${record['Spisová značka'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Soud</th>
                            <td>${record['Soud'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Dlužník</th>
                            <td>${record['Dlužník'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">IČO</th>
                            <td>${record['IČO'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Typ řízení</th>
                            <td>${record['Typ řízení'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Stav</th>
                            <td>${record['Stav'] || '-'}</td>
                        </tr>
                        <tr>
                            <th class="text-start">Detail</th>
                            <td>
                                ${
                                    record['Detail'] && record['Detail'] !== 'Neznámé'
                                    ? `<a href="${record['Detail']}" target="_blank" class="btn btn-sm btn-primary">Detail</a>`
                                    : 'Neuveden'
                                }
                            </td>
                        </tr>
                        <tr><td colspan="2" class="bg-light"></td></tr>
                    `;
                });

                ceuTableBody.innerHTML = rowsHtml;
            })
            .catch(error => {
                // Sem spadnou případy, kdy je network error, 
                // nebo jsme záměrně vyhodili Error při != 2xx status
                console.error('CEU Fetch Error:', error);
                const ceuTableBody = document.getElementById('ceu-table-body');
                ceuTableBody.innerHTML = `
                    <tr>
                        <td colspan="2" class="text-danger">Došlo k chybě při načítání CEU: ${error.message}</td>
                    </tr>
                `;
            });

        });
    });

    var options = {
        series: [{
            name: 'Nákupy celkem',
            data: [{% for spending in spendingByYear %}{{ spending.totalSpent }}, {% endfor %}]
        }],
        chart: {
            type: 'bar',
            height: 350
        },
        plotOptions: {
            bar: {
                horizontal: false,
                columnWidth: '55%',
                endingShape: 'rounded'
            },
        },
        dataLabels: {
            enabled: true,
            formatter: function (val) {
                return val.toFixed(2).toString().replace(".", ",").replace(/\B(?=(\d{3})+(?!\d))/g, ".") + " Kč";
            }
        },
        stroke: {
            show: true,
            width: 2,
            colors: ['transparent']
        },
        xaxis: {
            categories: [
                {% for spending in spendingByYear %}
                    '{{ spending.year }}',
                {% endfor %}
            ]
        },
        yaxis: {
            title: {
                text: 'Kč'
            },
            labels: {
                formatter: function (val) {
                    return val.toFixed(2).toString().replace(".", ",").replace(/\B(?=(\d{3})+(?!\d))/g, ".");
                }
            }
        },
        fill: {
            opacity: 1
        },
        tooltip: {
            y: {
                formatter: function (val) {
                    return val.toFixed(2).toString().replace(".", ",").replace(/\B(?=(\d{3})+(?!\d))/g, ".") + " Kč";
                }
            }
        }
    };

    var chart = new ApexCharts(document.querySelector("#chart"), options);
    chart.render();

{% endblock %}
