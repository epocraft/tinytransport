{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="row">

        <div class="col-6">

            <div class="card">

                <div class="card-body text-center">

                    {% if fileExists(image.filePath ~ image.fileName ~ '.' ~ image.fileType) %}

                        <img src="{{ image.filePath }}{{ image.fileName }}.{{ image.fileType }}" alt="{{ image.name }}" class="img-fluid">

                    {% else %}

                        -

                    {% endif %}

                </div>

            </div>

        </div>

        <div class="col-6">

            <div class="card">

                <div class="card-body">

                    <div class="table-responsive">

                        <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                            <tbody>
                                <tr>
                                    <th>{{ 'label.id'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.name'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.description'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.description }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.version'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.description }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_name'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileName }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_type'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileType }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_path'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.filePath }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_size'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.fileSize }}&nbsp;b</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.width'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.width }}&nbsp;px</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.height'|trans({}, 'image')|lower }}</th>
                                    <td>{{ image.height }}&nbsp;px</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.publication'|trans|lower }}</th>
                                    <td>
                                        {% set publication = image.publication %}
                                        {% if publication == '' %}
                                        {{ 'publication.select'|trans|lower }}
                                        {% endif %}
                                        {% if publication == 0 %}
                                        <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                        {% endif %}
                                        {% if publication == 1 %}
                                        <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfModifications" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfModifications"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfModifications">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ image.createdAt|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ dateLog.user.userUserContact.firstname }}
												{{ dateLog.user.userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}" title="{{ 'action.edit_image'|trans({}, 'image') }}" class="btn btn-success">{{ 'action.edit_image'|trans({}, 'image') }}</a>
            <a href="{{ path('app_admin_image_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/image/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
