{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="row">

        <div class="col-6">

            <div class="card">

                <div class="card-body text-center">

                    {% if fileExists(document.filePath ~ document.fileName ~ '.' ~ document.fileType) %}

                        {{ document.filePath }}{{ document.fileName }}.{{ document.fileType }}

                    {% else %}

                        -

                    {% endif %}

                </div>

            </div>

        </div>

        <div class="col-6">

            <div class="card">

                <div class="card-body">

                    <div class="table-responsive">

                        <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                            <tbody>
                                <tr>
                                    <th>{{ 'label.id'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.name'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.description'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.description }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.version'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.version }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_name'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.fileName }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_type'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.fileType }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_path'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.filePath }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.file_size'|trans({}, 'document')|lower }}</th>
                                    <td>{{ document.fileSize }}&nbsp;b</td>
                                </tr>
                                <tr>
                                    <th>{{ 'label.publication'|trans|lower }}</th>
                                    <td>
                                        {% set publication = document.publication %}
                                        {% if publication == '' %}
                                        {{ 'publication.select'|trans|lower }}
                                        {% endif %}
                                        {% if publication == 0 %}
                                        <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                        {% endif %}
                                        {% if publication == 1 %}
                                        <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfModifications" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfModifications"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfModifications">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ document.createdAt|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ dateLog.user.userUserContact.firstname }}
												{{ dateLog.user.userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_document_edit', {'id': document.id}) }}" title="{{ 'action.edit_document'|trans({}, 'document') }}" class="btn btn-success">{{ 'action.edit_document'|trans({}, 'document') }}</a>
            <a href="{{ path('app_admin_document_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/document/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
