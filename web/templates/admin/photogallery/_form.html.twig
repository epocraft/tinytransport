<div class="form-errors">
	{{ form_errors(form) }}
</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.basic_data'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
				{{ form_row(form.name) }}
			</div>

            <div class="col-12">
                {{ form_row(form.urlAlias) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex justify-content-between">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.content_data'|trans }}</h4>
        {{ include('admin/inc/layout/view-grid-table.html.twig') }}
	</div>

    <div class="card-body">
      
        {% if images is defined %}

            <div id="grid-view" class="d-none">

                <div class="row">

                    {% for image in images %}

                        <div class="col-1">

                            <figure id="image-figure-row-{{ image.id }}" class="figure">
                                <a href="{{ image.filePath }}/{{ image.fileName }}.{{ image.fileType }}" data-lightbox="{{ image.fileName }}" title="{{ image.name }}" data-title="{{ image.name }}">
                                    <img src="{{ image.filePath }}/{{ image.fileName }}.{{ image.fileType }}" class="figure-img img-fluid img-thumbnail rounded" alt="{{ image.description }}">
                                </a>
                                <figcaption class="figure-caption">{{ image.description }}</figcaption>
                            </figure>

                        </div>

                    {% endfor %}

                </div>

            </div>

            <div id="table-view" class="d-block">

                <div class="row">

                    <table id="sortable-table" class="table table-striped table-hover table-nowrap align-middle">

                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" class="text-center">{{ 'label.id'|trans|lower }}</th>
                                <th scope="col"></th>
                                <th scope="col">{{ 'label.name'|trans|lower }} / {{ 'label.description'|trans|lower }}</th>
                                <th scope="col">{{ 'label.file_name'|trans|lower }} / {{ 'label.file_path'|trans|lower }}</th>
                                <th scope="col" class="text-center">{{ 'label.file_type'|trans|lower }}</th>
                                <th scope="col" class="text-center">{{ 'label.file_size'|trans|lower }} [b]</th>
                                <th scope="col" class="text-center">{{ 'label.width'|trans|lower }} x {{ 'label.height'|trans|lower }} [px]</th>
                                <th scope="col" class="text-center">{{ 'label.publication'|trans|lower }}</th>
                                <th scope="col" class="text-center">{{ 'label.actions'|trans|lower }}</th>
                            </tr>
                        </thead>

                        <tbody>
                        {% for image in images %}
                            <tr id="image-table-row-{{ image.id }}">
                                <td class="text-center move"><i class="ri-drag-move-fill"></i></td>
                                <td class="text-center">{{ image.id }}</td>
                                <td>
                                    <a href="{{ image.filePath }}/{{ image.fileName }}.{{ image.fileType }}" data-lightbox="{{ image.fileName }}" title="{{ image.name }}" data-title="{{ image.name }}">
                                        <img src="{{ image.filePath }}/{{ image.fileName }}.{{ image.fileType }}" class="img-fluid rounded" alt="{{ image.description }}" style="width: 3rem;">
                                    </a>
                                </td>
                                <td>{{ image.name }}<br><small class="fst-italic">{{ image.description }}</small><br><small>{{ image.version }}</small></td>
                                <td>{{ image.fileName }}<br><small class="fst-italic">{{ image.filePath }}</small></td>
                                <td class="text-center">{{ image.fileType }}</td>
                                <td class="text-center">{{ image.fileSize }}</td>
                                <td class="text-center">{{ image.width }} x {{ image.height }}</td>
                                <td class="text-center">
                                    {% set publication = image.publication %}
                                    {% if publication == '' %}
                                        {{ 'publication.select'|trans|lower }}
                                    {% endif %}
                                    {% if publication == 0 %}
                                        <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                    {% endif %}
                                    {% if publication == 1 %}
                                        <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <a href="#" onclick="imageShow({{ image.id }}, event)" title="{{ 'action.show'|trans|lower }}"><i class="mdi mdi-eye"></i></a>
                                    <a href="#" onclick="imageEdit({{ image.id }}, event)" title="{{ 'action.edit'|trans|lower }}"><i class="mdi mdi-lead-pencil"></i></a>
                                    <a href="#" onclick="imageDelete({{ image.id }}, event)" title="{{ 'action.delete'|trans|lower }}"><i class="mdi mdi-delete text-danger"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>

                </div>

            </div>

        {% endif %}

        <div class="row">
            
            <div class="col-12">
                <div class="dropzone"></div>
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.publication'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
                {{ form_row(form.project) }}
            </div>

            <div class="col-12">
                {{ form_row(form.publication) }}
            </div>

        </div>

    </div>

</div>
