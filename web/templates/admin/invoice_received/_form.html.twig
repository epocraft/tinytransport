{% import _self as formMacros %}

{% macro addRow(invoiceReceivedItem, index) %}

    <div class="row mb-2">

        <div class="col-3">
            {{ form_widget(invoiceReceivedItem.name) }}
            <ul class="suggestions" id="suggestions-{{ invoiceReceivedItem.vars.name }}"></ul>
            {{ form_help(invoiceReceivedItem.name) }}
            {{ form_errors(invoiceReceivedItem.name) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.ammount) }}
            {{ form_help(invoiceReceivedItem.ammount) }}
            {{ form_errors(invoiceReceivedItem.ammount) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.purchasePrice) }}
            {{ form_help(invoiceReceivedItem.purchasePrice) }}
            {{ form_errors(invoiceReceivedItem.purchasePrice) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.purchaseCurrencyUnit) }}
            {{ form_help(invoiceReceivedItem.purchaseCurrencyUnit) }}
            {{ form_errors(invoiceReceivedItem.purchaseCurrencyUnit) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.purchaseMeasureUnit) }}
            {{ form_help(invoiceReceivedItem.purchaseMeasureUnit) }}
            {{ form_errors(invoiceReceivedItem.purchaseMeasureUnit) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.purchaseVatOfRate) }}
            {{ form_help(invoiceReceivedItem.purchaseVatOfRate) }}
            {{ form_errors(invoiceReceivedItem.purchaseVatOfRate) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.priceWithoutVat) }}
            {{ form_help(invoiceReceivedItem.priceWithoutVat) }}
            {{ form_errors(invoiceReceivedItem.priceWithoutVat) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.vat) }}
            {{ form_help(invoiceReceivedItem.vat) }}
            {{ form_errors(invoiceReceivedItem.vat) }}
        </div>

        <div class="col-1">
            {{ form_widget(invoiceReceivedItem.priceWithVat) }}
            {{ form_help(invoiceReceivedItem.priceWithVat) }}
            {{ form_errors(invoiceReceivedItem.priceWithVat) }}
        </div>

        <div class="col-1 d-flex justify-content-center align-items-start">
            <!-- Vždy zobrazit tlačítko pro přidání řádku -->
            <button type="button" class="btn btn-success add_item_link me-2"><i class="mdi mdi-plus-circle-outline"></i></button>
            
            <!-- Tlačítko pro odstranění řádku se zobrazí pro všechny řádky kromě prvního -->
            <button type="button" class="btn btn-danger delete-item"><i class="mdi mdi-trash-can-outline"></i></button>
        </div>

    </div>

{% endmacro %}

