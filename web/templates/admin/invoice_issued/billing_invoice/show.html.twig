{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'invoice_issued')|lower }}</th>
                            <td>{{ invoiceIssued.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.number'|trans({}, 'invoice_issued')|lower }}</th>
                            <td>{{ invoiceIssued.number }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.status'|trans({}, 'invoice_status')|lower }}</th>
                            <td>
                                {% set status = invoiceIssued.status.id %}
                                {% if status == '' %}
                                {{ 'status.select'|trans|lower }}
                                {% endif %}
                                {% if status == 0 %}
                                <span class="badge bg-danger">{{ 'status.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if status == 1 %}
                                <span class="badge bg-success">{{ 'status.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfModifications" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfModifications"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfModifications">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ invoiceIssued.createdAt|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ app.request.attributes.get('user').userUserContact.firstname }}
												{{ app.request.attributes.get('user').userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="row">

		{% if mailerLogs %}

			<div class="col-12">

				<div class="card">

                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_mailing'|trans }}</h4>
                        <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInvoiceHistoryOfMailing" aria-expanded="false" aria-controls="collapseInvoiceHistoryOfMailing"><i class="mdi mdi-information-outline"></i></button>
                    </div>

					<div class="card-body collapse" id="collapseInvoiceHistoryOfMailing">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for mailerLog in mailerLogs %}

										<tr>

                                            <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                                                <tr>
                                                    <th>{{ 'label.subject'|trans({}, 'invoice_issued')|lower }}</th>
                                                    <th>{{ mailerLog.subject }}</th>
                                                    <td rowspan="10">{{ mailerLog.text|raw }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.address_from'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.addressFrom }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.address_to'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.addressTo }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.address_cc'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.addressCc }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.address_bcc'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.addressBcc }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.date_sent'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.dateSent|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.date_opened'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.dateOpened|date(app.request.attributes.get('user').userUserSettings and app.request.attributes.get('user').userUserSettings.dateTimeFormat ? app.request.attributes.get('user').userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.priority'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.priority }}</td>
                                                </tr>
                                                
                                                <tr>
                                                    <td>{{ 'label.status'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.status }}</td>
                                                </tr>

                                                <tr>
                                                    <td>{{ 'label.user'|trans({}, 'invoice_issued')|lower }}</td>
                                                    <td>{{ mailerLog.user.fullName }}</td>
                                                </tr>

                                            </table>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_invoice_issued_billing_invoice_edit', {'id': invoiceIssued.id}) }}" title="{{ 'action.edit_billing_invoice'|trans({}, 'invoice_issued') }}" class="btn btn-success">{{ 'action.edit_billing_invoice'|trans({}, 'invoice_issued') }}</a>
            <a href="{{ path('app_admin_invoice_issued_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/invoice_issued/billing_invoice/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
