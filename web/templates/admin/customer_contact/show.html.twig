{% extends 'admin/base.html.twig' %}

{% block body_content %}

    {{ parent() }}
    
    <h1 class="fs-2">{{ customer.ciName }}</h1>

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.title_before'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.titleBefore }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.firstname'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.firstname }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.surname'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.surname }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.title_after'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.titleAfter }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.job_position'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.jobPosition }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.phone'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.phone }}</td>
                        </tr>
                         <tr>
                            <th>{{ 'label.mobile'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.mobile }}</td>
                        </tr>
                         <tr>
                            <th>{{ 'label.email'|trans({}, 'customer')|lower }}</th>
                            <td>{{ customerContact.email }}</td>
                        </tr>
                        <tr>
                        <tr>
                            <th>{{ 'label.publication'|trans|lower }}</th>
                            <td>
                                {% set publication = customerContact.publication %}
                                {% if publication == '' %}
                                {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="row">

		{% if dateLogs %}

			<div class="col-6">

				<div class="card">

					<div class="card-header align-items-center d-flex">
						<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.history_of_modifications'|trans }}</h4>
					</div>

					<div class="card-body">

						<div class="table-responsive">

							<table class="table table-striped table-hover table-nowrap align-middle mb-0">

								<tbody>

									{% for dateLog in dateLogs %}

										<tr>

											{% set date = dateLog.updatedAt|date('Y-m-d H:i:s') %}

											{% if date == '1000-01-01 00:00:00' %}

												<th>{{ 'label.created_at'|trans|lower }}</th>
												<td>{{ customerContact.createdAt|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% else %}

												<th>{{ 'label.updated_at'|trans|lower }}</th>
												<td>{{ date|date(user.userUserSettings and user.userUserSettings.dateTimeFormat ? user.userUserSettings.dateTimeFormat : 'Y-m-d H:i:s') }}</td>

											{% endif %}

											<td>{{ dateLog.user.userUserContact.firstname }}
												{{ dateLog.user.userUserContact.surname }}</td>

										</tr>

									{% endfor %}

								</tbody>

							</table>

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>
    
    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_customer_contact_edit', {'id': customerContact.id, 'customerId': customerId}) }}" title="{{ 'action.edit_customer_contact'|trans({}, 'customer') }}" class="btn btn-success">{{ 'action.edit_customer_contact'|trans({}, 'customer') }}</a>
            <a href="{{ path('app_admin_customer_contact_index', {'customerId': customerId}) }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/customer_contact/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
