function documentShow(documentId, event) {
    event.preventDefault();
    var url = documentShowUrl.replace(/0(?=\/|$)/, documentId);
    $.ajax({
        url: url,
        method: 'GET',
        success: function(data) {

            var modalBody = $('#documentShowModal .modal-body');
            
            var html = "";
            html += '<div class="table-responsive">';
                html += '<table class="table table-striped table-hover table-nowrap align-middle mb-0">';
                    html += '<thead>';
                        html += '<tr>';
                            html += '<td colspan="2">';
                                html += '<img src="' + data.document.filePath + '/' + data.document.fileName + '.' + data.document.fileType + '" alt="' + data.document.name + '" class="img-fluid">';
                                html += '</td>';
                            html += '<tr>';
                        html += '</thead>';
                        html += '<tbody>';
                        html += '<tr>';
                            html += '<td>{{ 'label.id'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.recordId + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.name'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.name + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.description'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.description + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.version'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.version + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.file_name'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.fileName + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.file_path'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.filePath + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.file_type'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.fileType + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.file_size'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.fileSize + ' [b]</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.position'|trans({}, 'document')|lower }}</td>';
                            html += '<td>' + data.document.position + '</td>';
                        html += '<tr>';
                        html += '<tr>';
                            html += '<td>{{ 'label.publication'|trans|lower }}</td>';
                            if (data.document.publication == '') {
                            html += '<td>{{ 'publication.select'|trans|lower }}</td>';
                            }
                            if (data.document.publication == 0) {
                            html += '<td><span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span></td>';
                            }
                            if (data.document.publication == 1) {
                            html += '<td><span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span></td>';
                            }
                        html += '</tr>';
                    html += '</tbody>';
                html += '</table>';
            html += '</div>';

            modalBody.html(html);

            $('#documentShowModal').modal('show');

        },
        error: function() {

            alert('Nepodařilo se načíst informace o dokumentu.');

        }
    });
}