function documentEdit(documentId, event) {
    event.preventDefault();
    var url = documentEditUrl.replace(/0(?=\/|$)/, documentId);
    $.ajax({
        url: url,
        method: 'GET',
        success: function(response) {
            $('#documentEditModal .modal-body').html(response);
            $('#documentEditModal').modal('show');
        },
        error: function() {
            alert('Nepodařilo se načíst data pro editaci.');
        }
    });
}

function submitEditForm() {
    //event.preventDefault();
    var formData = $('#documentEditForm').serialize();
    var url = $('#documentEditForm').attr('action');
    $.ajax({
        url: url,
        method: 'POST',
        data: formData,
        success: function(response) {
            if (response.status === 'success') {
                $('#document-figure-row-' + response.id).replaceWith(response.updatedGridFigureHtml);
                $('#document-table-row-' + response.id).replaceWith(response.updatedTableRowHtml);
                alert('Dokument byl úspěšně aktualizován');
                $('#documentEditModal').modal('hide');
            } else {
                alert('Chyba: ' + response.message);
            }
        },
        error: function() {
            alert('Nepodařilo se aktualizovat dokument.');
        }
    });
}