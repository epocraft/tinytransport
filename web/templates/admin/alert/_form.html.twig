<div class="form-errors">
	{{ form_errors(form) }}
</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.basic_data'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
				{{ form_row(form.name) }}
			</div>

            <div class="col-12">
                {{ form_row(form.urlAlias) }}
            </div>

            <div class="col-12">
                {{ form_row(form.description) }}
            </div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.settings_data'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-6">
				{{ form_row(form.delay) }}
			</div>

            <div class="col-6">
				{{ form_row(form.cookieExpire) }}
			</div>

        </div>

    </div>

</div>

<div class="card">

    <div class="card-header align-items-center d-flex">
		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.publication'|trans }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
                {{ form_row(form.project) }}
            </div>

            <div class="col-12">
                {{ form_row(form.language) }}
            </div>

            <div class="col-6">
                {{ form_row(form.validFrom) }}
            </div>

            <div class="col-6">
                {{ form_row(form.validTo) }}
            </div>

            <div class="col-12">
                {{ form_row(form.publication) }}
            </div>

        </div>

    </div>

</div>
